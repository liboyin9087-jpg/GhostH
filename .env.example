# Environment Configuration Example
# 複製此檔案為 .env 並填入實際值

# ===== 應用程式設定 =====
VITE_APP_NAME="靈異連線：蝕骨杏林"
VITE_APP_VERSION="4.0.0"
VITE_APP_ENV="production"

# ===== 功能開關 =====
# 音效系統
VITE_ENABLE_AUDIO=true
VITE_DEFAULT_VOLUME=0.7

# VHS 視覺效果
VITE_ENABLE_VHS_EFFECTS=true
VITE_VHS_INTENSITY=0.8

# 驚嚇系統
VITE_ENABLE_HAUNT_SYSTEM=true
VITE_HAUNT_FREQUENCY=0.65

# 成就系統
VITE_ENABLE_ACHIEVEMENTS=true

# 觸覺回饋
VITE_ENABLE_HAPTICS=true

# ===== 遊戲設定 =====
# 恐懼值設定
VITE_INITIAL_FEAR_LEVEL=0.3
VITE_MAX_FEAR_LEVEL=1.0
VITE_FEAR_DECAY_RATE=0.1

# 電量設定
VITE_INITIAL_BATTERY=100
VITE_BATTERY_DRAIN_RATE=1

# ===== 效能設定 =====
# 圖片品質
VITE_IMAGE_QUALITY="high"

# 音效預載入
VITE_PRELOAD_AUDIO=true

# 快取策略
VITE_ENABLE_CACHE=true
VITE_CACHE_DURATION=3600

# ===== 分析與監控 (可選) =====
# Google Analytics
# VITE_GA_TRACKING_ID=

# Sentry 錯誤追蹤
# VITE_SENTRY_DSN=

# ===== 除錯設定 =====
VITE_ENABLE_DEBUG=false
VITE_SHOW_FPS=false
VITE_LOG_LEVEL="info"

# ===== API 設定 (如需要) =====
# VITE_API_BASE_URL=
# VITE_API_KEY=

# ===== 社交分享 (可選) =====
# VITE_SHARE_URL=
# VITE_SHARE_IMAGE=
# VITE_SHARE_DESCRIPTION=

# ===== 無障礙設定 =====
VITE_ENABLE_REDUCED_MOTION=false
VITE_ENABLE_HIGH_CONTRAST=false

# ===== 實驗性功能 =====
VITE_ENABLE_EXPERIMENTAL_FEATURES=false
